<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <!-- Header với nền cong nhẹ -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/header_background_shape"
        android:backgroundTint="@color/darkBrown"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle_bg_light"
            android:backgroundTint="#30FFFFFF"
            android:padding="8dp"
            android:src="@drawable/back"
            app:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_horizontal"
            android:text="Thống kê &amp; Báo cáo"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tabs Selection - Thêm nút Biểu đồ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tabsCard"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="28dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <LinearLayout
            android:id="@+id/tabsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="4dp">

            <!-- Nút Ngày -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDaily"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ngày"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Nút Tháng -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMonthly"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Tháng"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Nút Top Món -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTopProducts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Top Món"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- === NÚT BIỂU ĐỒ MỚI === -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Biểu đồ"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Vùng chứa Nội dung (Dùng FrameLayout để dễ dàng chuyển đổi giữa các View) -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabsCard">

        <!-- 1. Nội dung cho Tab Ngày/Tháng/Top Món (ScrollView) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/dataScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"
            android:clipToPadding="false"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- TRẠNG THÁI ĐƠN HÀNG (4 Ô) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Tổng quan đơn hàng"
                    android:textColor="@color/darkBrown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:id="@+id/orderStatusGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:padding="12dp"
                    android:rowCount="2">
                    <!-- Các CardView cho trạng thái đơn hàng (giữ nguyên) -->
                    <!-- Ô 1: Hoàn thành -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/logo5"
                                    app:tint="#4CAF50" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Hoàn thành"
                                    android:textColor="#757575"
                                    android:textSize="13sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/countCompletedTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="#2E7D32"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!-- Các ô còn lại giữ nguyên... -->
                    <!-- Ô 2: Đang xử lý -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/logo5"
                                    app:tint="#FF9800"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Đang xử lý"
                                    android:textColor="#757575"
                                    android:textSize="13sp" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/countProcessingTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textColor="#EF6C00"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Ô 3: Đang giao -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/logo5"
                                    app:tint="#2196F3"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Đang giao"
                                    android:textColor="#757575"
                                    android:textSize="13sp" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/countShippingTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#1565C0"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Ô 4: Đã hủy -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="6dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="16dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical">
                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/logo5"
                                    app:tint="#F44336"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Đã hủy"
                                    android:textColor="#757575"
                                    android:textSize="13sp" />
                            </LinearLayout>
                            <TextView
                                android:id="@+id/countCancelledTxt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#C62828"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <!-- Tổng kết & Danh sách -->
                <TextView
                    android:id="@+id/titleSummaryTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="16dp"
                    android:text="Chi tiết doanh thu"
                    android:textColor="@color/darkBrown"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Tổng tiền nổi bật -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFF3E0"
                            android:gravity="center_vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:letterSpacing="0.1"
                                android:text="TỔNG CỘNG:"
                                android:textColor="@color/orange"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/totalSummaryTxt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0"
                                android:textColor="@color/orange"
                                android:textSize="22sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Danh sách chi tiết -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/statsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:paddingVertical="8dp" />

                        <!-- Text báo rỗng -->
                        <TextView
                            android:id="@+id/emptyTxt"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:text="Chưa có dữ liệu thống kê"
                            android:textColor="@color/grey"
                            android:visibility="gone" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ScrollView
            android:id="@+id/chartLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="50dp">

                <!-- BIỂU ĐỒ 1: DOANH THU -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/revenueChartCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/revenueChartTitleTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="Doanh thu 7 ngày gần nhất"
                            android:textColor="@color/darkBrown"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/revenueBarChart"
                            android:layout_width="match_parent"
                            android:layout_height="250dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- BIỂU ĐỒ 2: TOP SẢN PHẨM (CỘT) -->
                <!--
                <androidx.cardview.widget.CardView
                    android:id="@+id/topProductsChartCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/topProductsChartTitleTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:text="Top 7 sản phẩm bán chạy (Cột)"
                            android:textColor="@color/darkBrown"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/topProductsBarChart"
                            android:layout_width="match_parent"
                            android:layout_height="250dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
`               -->
                <!-- BIỂU ĐỒ 3: TỶ LỆ SẢN PHẨM (PIE CHART) - MỚI -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/topProductsPieChartCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">
                        <TextView
                            android:text="Tỷ lệ % Top sản phẩm bán chạy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="10dp"
                            android:textColor="@color/darkBrown"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/topProductsPieChart"
                            android:layout_width="match_parent"
                            android:layout_height="300dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
