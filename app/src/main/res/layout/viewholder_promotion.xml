<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Icon -->
        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle_bg_light">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/logo5"
                app:tint="@color/orange"/>
        </FrameLayout>

        <!-- Thông tin -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/codeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CODE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkBrown"/>

            <TextView
                android:id="@+id/percentTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm 0%"
                android:textSize="14sp"
                android:textColor="@color/orange"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạn: 01/01/2024"
                android:textSize="12sp"
                android:textColor="@color/grey"/>
        </LinearLayout>

        <!-- Nút cho ADMIN (Sửa/Xóa) - Mặc định GONE -->
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/darkBrown"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
            app:tint="@color/orange"
            android:visibility="gone"/>

        <!-- Nút cho USER (Copy) - Mặc định GONE -->
        <ImageView
            android:id="@+id/btnCopy"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:src="@drawable/checklist"
            app:tint="@color/darkBrown"
            android:visibility="gone"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
