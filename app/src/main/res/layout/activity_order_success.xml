<?xml version="1.0" encoding="utf-8"?>
<!-- File: res/layout/activity_order_success.xml -->
<!-- HÃY THAY THẾ TOÀN BỘ FILE CŨ BẰNG NỘI DUNG NÀY -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:gravity="center"
    tools:context=".Activity.OrderSuccessActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_max="600dp"> <!-- Giới hạn chiều cao tối đa của popup -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Phần trên không cuộn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="24dp"
                android:paddingEnd="24dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/logo5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Đặt Hàng Thành Công!"
                    android:textColor="@color/darkBrown"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Cảm ơn bạn đã mua hàng tại Koda Coffee"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/grey" />

            </LinearLayout>

            <!-- Phần nội dung có thể cuộn -->
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:paddingBottom="24dp">

                    <!-- A. Thông tin giao hàng -->
                    <TextView
                        android:id="@+id/orderInfoTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/darkBrown"
                        android:textSize="15sp"
                        tools:text="Mã đơn hàng: #1A2B3C\nNgười nhận: Khoa Zo\nĐịa chỉ: 123 ABC, P.XYZ, Q.1, TP.HCM" />

                    <!-- B. Chi tiết sản phẩm (PHẦN MỚI) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Chi tiết đơn hàng"
                        android:textColor="@color/darkBrown"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/itemsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="2"
                        tools:listitem="@layout/viewholder_checkout_item" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:background="@color/grey" />

                    <!-- C. Tổng tiền -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tổng Cộng"
                            android:textColor="@color/darkBrown"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/orange"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:text="127.2 VNĐ" />
                    </LinearLayout>

                    <!-- D. Nút bấm -->
                    <!-- === THAY ĐỔI TẠI ĐÂY: Thêm 2 nút bấm === -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal">

                        <!-- Nút Tải PDF -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/downloadPdfBtn"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:text="Tải PDF"
                            android:textAllCaps="false"
                            android:textColor="@color/orange"
                            app:cornerRadius="28dp"
                            app:strokeColor="@color/orange" />

                        <!-- Nút Về Trang Chủ -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/backToHomeBtn"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/brown_full_corner_bg"
                            android:text="Về Trang Chủ"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
